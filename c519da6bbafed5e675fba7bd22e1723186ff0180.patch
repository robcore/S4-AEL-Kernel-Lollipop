From c519da6bbafed5e675fba7bd22e1723186ff0180 Mon Sep 17 00:00:00 2001
From: shminer <332574643@qq.com>
Date: Mon, 13 Apr 2015 08:30:04 +0800
Subject: [PATCH] thermal:use sensor-id 0

---
 arch/arm/boot/dts/qcom/apq8084.dtsi   | 2 +-
 drivers/thermal/intelli/msm_thermal.c | 4 ++--
 2 files changed, 3 insertions(+), 3 deletions(-)

diff --git a/arch/arm/boot/dts/qcom/apq8084.dtsi b/arch/arm/boot/dts/qcom/apq8084.dtsi
index 6becfd8..4f664c8 100644
--- a/arch/arm/boot/dts/qcom/apq8084.dtsi
+++ b/arch/arm/boot/dts/qcom/apq8084.dtsi
@@ -4901,7 +4901,7 @@
 
 	qcom,msm-thermal {
 		compatible = "qcom,msm-thermal";
-		qcom,sensor-id = <5>;
+		qcom,sensor-id = <0>;
 		qcom,poll-ms = <250>;
 		qcom,limit-temp = <75>;
 		qcom,temp-hysteresis = <10>;
diff --git a/drivers/thermal/intelli/msm_thermal.c b/drivers/thermal/intelli/msm_thermal.c
index ecb8167..fe55d54 100644
--- a/drivers/thermal/intelli/msm_thermal.c
+++ b/drivers/thermal/intelli/msm_thermal.c
@@ -1436,8 +1436,8 @@ static void do_freq_control(long temp)
 	uint32_t max_freq = cpus[cpu].limited_max_freq;
 
 	if (safety == 1) {
-		if (msm_thermal_info.limit_temp_degC > 88)
-			msm_thermal_info.limit_temp_degC = 88;
+		if (msm_thermal_info.limit_temp_degC > 85)
+			msm_thermal_info.limit_temp_degC = 85;
 	}
 
 	if (temp >= msm_thermal_info.limit_temp_degC) {
